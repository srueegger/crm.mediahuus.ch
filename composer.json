{
    "name": "mediahuus/crm",
    "description": "Internal CRM for Mediahuus phone repair shops",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.2",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "twig/twig": "^3.7",
        "doctrine/dbal": "^3.7",
        "tecnickcom/tcpdf": "^6.7",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.4"
    },
    "require-dev": {},
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit",
        "phpcs": "phpcs --standard=PSR12 app tests",
        "phpstan": "phpstan analyse app --level=5",
        "migrate": "php bin/migrate.php",
        "seed": "php bin/seed.php"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}