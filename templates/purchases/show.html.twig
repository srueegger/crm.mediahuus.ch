{% extends "base.html.twig" %}

{% block title %}Ankauf {{ document.doc_number }} - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-4xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <!-- Header -->
        <div class="mb-8 flex justify-between items-start">
            <div>
                <h2 class="text-2xl font-bold text-gray-900 mb-2">Ankauf {{ document.doc_number }}</h2>
                <p class="text-gray-600">Erstellt am {{ document.created_at|date('d.m.Y H:i') }} Uhr</p>
            </div>
            <div class="flex gap-3">
                <a href="{{ url_for('purchases.index') }}"
                   class="px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
                    Zurück
                </a>
                <a href="{{ url_for('purchases.pdf', {id: document.id}) }}"
                   class="px-4 py-2 bg-emerald-600 text-white rounded-lg hover:bg-emerald-700 transition-colors inline-flex items-center gap-2">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                    PDF herunterladen
                </a>
            </div>
        </div>

        <!-- Document Details -->
        <div class="space-y-6">
            <!-- Filiale -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                    </svg>
                    Filiale
                </h3>
                <p class="text-gray-900 font-medium">{{ branch.name }}</p>
                <p class="text-sm text-gray-600">{{ branch.full_address }}</p>
            </div>

            <!-- Verkäufer -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                    </svg>
                    Verkäufer
                </h3>
                <div class="space-y-2">
                    <div>
                        <p class="text-sm font-medium text-gray-500">Name</p>
                        <p class="text-gray-900">{{ document.customer_name }}</p>
                    </div>
                    <div>
                        <p class="text-sm font-medium text-gray-500">Adresse</p>
                        <p class="text-gray-900">{{ purchase.seller_address }}</p>
                    </div>
                    {% if document.customer_phone %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Telefon</p>
                        <p class="text-gray-900">{{ document.customer_phone }}</p>
                    </div>
                    {% endif %}
                    {% if document.customer_email %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">E-Mail</p>
                        <p class="text-gray-900">{{ document.customer_email }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Geräteinformationen -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                    </svg>
                    Angekauftes Gerät
                </h3>
                <div class="bg-gray-50 rounded-lg p-4 space-y-3">
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm font-medium text-gray-500">Gerät</p>
                            <p class="text-gray-900 font-medium">{{ purchase.device_full_name }}</p>
                        </div>
                        <div>
                            <p class="text-sm font-medium text-gray-500">Gerätetyp</p>
                            <p class="text-gray-900">{{ purchase.device_type_name }}</p>
                        </div>
                    </div>

                    {% if purchase.imei %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">IMEI</p>
                        <p class="text-gray-900 font-mono">{{ purchase.imei }}</p>
                    </div>
                    {% endif %}

                    {% if purchase.serial_number %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Seriennummer</p>
                        <p class="text-gray-900 font-mono">{{ purchase.serial_number }}</p>
                    </div>
                    {% endif %}

                    {% if purchase.device_condition %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Zustand</p>
                        <p class="text-gray-900">{{ purchase.device_condition }}</p>
                    </div>
                    {% endif %}

                    {% if purchase.accessories %}
                    <div>
                        <p class="text-sm font-medium text-gray-500">Zubehör</p>
                        <p class="text-gray-900">{{ purchase.accessories }}</p>
                    </div>
                    {% endif %}
                </div>
            </div>

            <!-- Ankaufspreis -->
            <div class="bg-gradient-to-r from-emerald-500 to-emerald-600 rounded-lg shadow-sm p-6 text-white">
                <div class="flex justify-between items-center">
                    <div>
                        <p class="text-emerald-100 text-sm font-medium mb-1">Ankaufspreis</p>
                        <p class="text-3xl font-bold">{{ purchase.formatted_price }}</p>
                    </div>
                    <svg class="w-12 h-12 text-emerald-200 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
            </div>

            <!-- Dokumentation -->
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
                <h3 class="text-lg font-medium text-gray-900 mb-4 flex items-center">
                    <svg class="w-5 h-5 text-emerald-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/>
                    </svg>
                    Ausweis-Dokumentation
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div>
                        <p class="text-sm font-medium text-gray-500 mb-2">Vorderseite / Pass</p>
                        <div class="bg-gray-100 rounded-lg p-2 text-center">
                            <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <p class="text-sm text-gray-600 mt-2">{{ purchase.id_document_front }}</p>
                        </div>
                    </div>
                    {% if purchase.id_document_back %}
                    <div>
                        <p class="text-sm font-medium text-gray-500 mb-2">Rückseite</p>
                        <div class="bg-gray-100 rounded-lg p-2 text-center">
                            <svg class="w-12 h-12 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                            </svg>
                            <p class="text-sm text-gray-600 mt-2">{{ purchase.id_document_back }}</p>
                        </div>
                    </div>
                    {% endif %}
                </div>
                <p class="text-xs text-gray-500 mt-4">
                    Die Ausweis-Fotos sind sicher gespeichert und werden nur für gesetzliche Anforderungen verwendet.
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
