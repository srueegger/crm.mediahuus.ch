{% extends "base.html.twig" %}

{% block title %}Benutzer bearbeiten - {{ parent() }}{% endblock %}

{% block content %}
<div class="max-w-2xl mx-auto py-6 sm:px-6 lg:px-8">
    <div class="px-4 py-6 sm:px-0">
        <!-- Header -->
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-900 mb-2">Benutzer bearbeiten</h2>
            <p class="text-gray-600">Bearbeiten Sie die Daten für {{ editUser.name }}</p>
        </div>

        <!-- Error Message -->
        {% if error %}
            <div class="mb-6 bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded">
                {{ error }}
            </div>
        {% endif %}

        <!-- Form -->
        <div class="mediahuus-form-section">
            <form method="POST" action="{{ url_for('users.update', {id: editUser.id}) }}" class="space-y-6">
                <!-- Name -->
                <div>
                    <label for="name" class="mediahuus-label">
                        Name *
                    </label>
                    <input type="text" 
                           name="name" 
                           id="name" 
                           value="{{ editUser.name }}"
                           required
                           class="mediahuus-input {{ errors.name ? 'error' : '' }}" 
                           placeholder="Vollständiger Name">
                    {% if errors.name %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.name }}</p>
                    {% endif %}
                </div>

                <!-- Email -->
                <div>
                    <label for="email" class="mediahuus-label">
                        E-Mail-Adresse *
                    </label>
                    <input type="email" 
                           name="email" 
                           id="email" 
                           value="{{ editUser.email }}"
                           required
                           class="mediahuus-input {{ errors.email ? 'error' : '' }}" 
                           placeholder="benutzer@mediahuus.ch">
                    {% if errors.email %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.email }}</p>
                    {% endif %}
                </div>

                <!-- Password -->
                <div>
                    <label for="password" class="mediahuus-label">
                        Neues Passwort
                    </label>
                    <input type="password" 
                           name="password" 
                           id="password" 
                           minlength="6"
                           class="mediahuus-input {{ errors.password ? 'error' : '' }}" 
                           placeholder="Leer lassen, um Passwort beizubehalten">
                    {% if errors.password %}
                        <p class="mt-1 text-sm text-red-600">{{ errors.password }}</p>
                    {% endif %}
                    <p class="mt-1 text-sm text-gray-500">Lassen Sie das Feld leer, um das aktuelle Passwort beizubehalten.</p>
                </div>

                <!-- Active Status -->
                <div class="flex items-center">
                    <input type="checkbox" 
                           name="is_active" 
                           id="is_active" 
                           value="1"
                           {% if editUser.is_active %}checked{% endif %}
                           class="h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded">
                    <label for="is_active" class="ml-2 block text-sm text-gray-900">
                        Benutzer ist aktiv
                    </label>
                </div>
                <p class="text-sm text-gray-500">Nur aktive Benutzer können sich anmelden.</p>

                <!-- User Info -->
                <div class="bg-gray-50 p-4 rounded-lg">
                    <h4 class="text-sm font-medium text-gray-900 mb-2">Benutzer-Informationen</h4>
                    <div class="text-sm text-gray-600 space-y-1">
                        <p><span class="font-medium">Erstellt:</span> {{ editUser.created_at|date('d.m.Y H:i') }}</p>
                        <p><span class="font-medium">Zuletzt geändert:</span> {{ editUser.updated_at|date('d.m.Y H:i') }}</p>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex justify-end space-x-3 pt-6 border-t">
                    <a href="{{ url_for('users.index') }}" 
                       class="mediahuus-button-secondary">
                        Abbrechen
                    </a>
                    <button type="submit" 
                            class="mediahuus-button-primary">
                        Änderungen speichern
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}